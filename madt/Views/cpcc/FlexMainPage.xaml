<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="madt.Views.cpcc.FlexMainPage"
 class="basicBackgroundColor"
 xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core" 
 ios:Page.UseSafeArea="true">
        
    
<ContentPage.Resources>
    <StyleSheet Source="/Views/Style/Base.css" />
</ContentPage.Resources>    

    <ContentPage.Content>
        
        <FlexLayout Direction="Column">
            
                <!--Pin to Top-->
                <Label FlexLayout.AlignSelf="Stretch" FlexLayout.Order="0" class="contentPageHeaderFooter" Text="WEB 151"/>
                
                <!--Fill in extra space left, this will be the body of our page-->
                <FlexLayout Direction="Column" FlexLayout.Grow="1" FlexLayout.Order="1" BackgroundColor="White">
                
                    <FlexLayout class="identiferContainer">
                        <Button class="identifierButton" BorderRadius="37" Text="E" FontSize="Large"/>
                    </FlexLayout>
                
                </FlexLayout>

                <!--Pin to Bottom-->
                <Label FlexLayout.Order="2" class="contentPageHeaderFooter" Text="CPCC WEB 151" /> 
            </FlexLayout>
            
</ContentPage.Content>
    
</ContentPage>
